{
  "name": "typescript-api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Faisal A. <faisal.al.tameemi@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "dev": "export NODE_ENV=development; nodemon --exec ts-node src/api/index.ts --watch src",
    "test": "./node_modules/jest/bin/jest.js --watch",
    "coverage": "jest --coverage",
    "db:rollback": "npm run build && npx sequelize-cli db:migrate:undo:all --options-path ./.sequelizerc-dist",
    "db:migrate": "npm run build && npx sequelize-cli db:migrate --options-path ./.sequelizerc-dist",
    "db:seed": "npm run build && npx sequelize-cli db:seed:all --options-path ./.sequelizerc-dist",
    "db:reset": "npm run db:rollback && npm run db:migrate && npm run db:seed"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.1",
    "babel-core": "^6.26.3",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "rimraf": "^2.6.3",
    "socket.io-client": "^2.2.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.27",
    "@types/express-jwt": "^0.0.42",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/lodash": "^4.14.136",
    "@types/socket.io": "^2.1.2",
    "@types/validator": "^10.11.2",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.6.9",
    "pg": "^7.12.1",
    "sequelize": "^5.13.1",
    "socket.io": "^2.2.0",
    "typegoose": "^5.9.0",
    "uuid": "^3.3.2",
    "winston": "^3.2.1",
    "yenv": "^2.1.0"
  }
}
